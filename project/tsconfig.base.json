{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/authentification": [
        "libs/account/authentification/src/index.ts"
      ],
      "@project/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/comment": ["libs/blog/comment/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/data-access": ["libs/shared/src/index.ts"],
      "@project/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/post": ["libs/blog/post/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
